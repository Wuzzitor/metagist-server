{% extends 'MetagistServerBundle::layout.html.twig' %}
{% set pagetitle = 'Rate ' ~ package %}

{% block content %}
{% if package.branding %}
    {% set class = package.branding.vendor %}
{% else %}
    {% set class = "default-gradient" %}
{% endif %}
<div class="row package {{class}}">
    <div class="page-header">
        <h1>Rate {{package}}<br /><small>Please respect the author's efforts.</small></h1>
    </div>

    <form action="" method="post" role="form" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        {{ form_row(form.rating) }}
        {{ form_row(form.version) }}
        {{ form_row(form.title) }}
        {{ form_row(form.comment) }}
        {{ form_rest(form) }}
        <div class="form-group">
            <button type="submit" class="btn btn-primary">{{ 'Send'|trans }}</button>
            <a href="{{ path('package', {'author': package.author, 'name': package.name})}}" class="btn">{{ 'Cancel'|trans }}</a>
        </div>
    </form>
</div>
{% endblock %}
