{% extends 'MetagistServerBundle::layout.html.twig' %}
{% set pagetitle = 'metagist.org' %}

{% block content -%}
<div class="row padded default-gradient">

    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('admin_category') }}">
        Back to the list
    </a>
    <a class="btn btn-default" href="{{ path('admin_category_edit', { 'id': entity.id }) }}">
        Edit
    </a>
</div>
{% endblock %}
